<div class="pink-purple-gradient vh-100 text-white d-flex flex-column text-center align-items-center justify-content-center py-4">
    <h2><%= @bar.name %></h2>
    <div class="gap-3">
      <p><%= @bar.price %></p>
      <p>Closes at <%= @bar.closing_time %> hours</p>
      <h3>vibez</h3>
      <% if @bar.subvibes.length > 0 %>
        <div class="grid-subvibes">
          <% @bar.subvibes.each do |subvibe| %>
            <div class="icon-card">
              <i class="fa-solid fa-champagne-glasses icon-img"></i>
              <%=subvibe.name%>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2>This bar doesnt have subvibes yet!</h2>
      <% end %>
      <h3>Viberz Who Likes Bar</h3>
      <% if @bar.users.length > 0 %>
        <div class="grid-subvibes">
          <% @bar.users.each do |user| %>
            <div>
              <%= image_tag("https://source.unsplash.com/random/?user", class: "avatar-img") %>
              <%= link_to user.username, root_path %>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2>This bar doesnt have viberzs yet!</h2>
      <% end %>
    </div>
    <button type="button" style="width: 400px" class="white">Letz Gooo</button>
</div>
