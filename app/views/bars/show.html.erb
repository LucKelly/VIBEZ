<div class="bar-page-body">

<%# vw-100 height-minus-navbar h-100 text-white d-flex flex-column text-center align-items-center justify-content-center pb-4 px-4 pink-purple-gradient dumb-body-fix %>
    <%# <div> %>
      <div class="bar-image-container">
        <%= cl_image_tag @bar.photo.key, crop: :fill, class: "bar-image" %>
      </div>
    <%# </div> %>

    <div class="d-flex gap-3 align-items-center justify-content-between w-100 py-4">
      <div class="text-start">
        <h2 class="bar-header-text"><%= @bar.name %></h2>
        <p><%= @bar.price %></p>
        <p>Closes at <%= @bar.closing_time %>h</p>
      </div>
      <div>
        <i class="fa-regular fa-bookmark fa-2x"></i>
      </div>
    </div>

    <h3 class="bar-header-text"><%= @bar.name %>'s vibez</h3>
    <div class="pb-4">
      <% if @bar.subvibes.length > 0 %>
        <div class="grid-subvibes-style d-flex flex-wrap justify-content-between">
          <% @bar.subvibes.each do |subvibe| %>
            <div class="icon-card">
              <%= cl_image_tag subvibe.photo.key, class: "avatar-img"%>
              <%# <i class="fa-solid fa-champagne-glasses icon-img"></i> %>
              <%=subvibe.name%>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2>This bar doesn't have subvibes yet!</h2>
      <% end %>
    </div>

    <h3 class="bar-header-text">Viberz who like <%= @bar.name %></h3>
    <div class="pb-4">
      <% if @bar.users.length > 0 %>
        <div class="grid-subvibes-style d-flex flex-wrap justify-content-between">
          <% @bar.users.each do |user| %>
            <div class="avatar-card">
              <%= cl_image_tag user.photo.key, class: "avatar-img" %>
              <%= link_to user.username, user_path(user.id) %>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2>This bar doesn't have viberzs yet!</h2>
      <% end %>
    </div>

  <div type="button" class="button-landing-page redirect-button-margin">Take me there!</div>
</div>
