<div class="bar-page-body">


      <div class="bar-image-container">
        <%= cl_image_tag @bar.photo.key, crop: :fill, class: "bar-image" %>
      </div>


    <div class="d-flex gap-3 align-items-center justify-content-between w-100 py-4">
      <div class="text-start">
        <h2 class="header-font"><%= @bar.name %></h2>
        <p class="paragraph-font"><%= @bar.price %></p>
        <p class="paragraph-font">Closes at <%= @bar.closing_time %>h</p>
      </div>
      <div>
        <i class="fa-regular fa-bookmark fa-2x"></i>
      </div>
    </div>

    <h3 class="header-font"><%= @bar.name %>'s vibez</h3>
    <div class="pb-4">
      <% if @bar.subvibes.length > 0 %>
        <div class="grid-subvibes-style d-flex flex-wrap justify-content-between">
          <% @bar.subvibes.each do |subvibe| %>
            <div class="icon-card subvibe-font">
              <%= cl_image_tag subvibe.photo.key, class: "avatar-img"%>
              <%=subvibe.name%>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2 class="paragraph-font">This bar doesn't have subvibes yet!</h2>
      <% end %>
    </div>

    <h3 class="header-font">Viberz who like <%= @bar.name %></h3>
    <div class="pb-4">
      <% if @bar.users.length > 0 %>
        <div class="grid-subvibes-style d-flex flex-wrap justify-content-between">
          <% @bar.users.each do |user| %>
            <div class="avatar-card subvibe-font">
              <%= cl_image_tag user.photo.key, class: "avatar-img" %>
              <% if user.id == current_user.id %>
                <%= link_to user.username, my_profile_path %>
              <% else %>
                <%= link_to user.username, other_profile_path(user.id) %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2 class="paragraph-font">This bar doesn't have viberzs yet!</h2>
      <% end %>
    </div>

  <%= link_to "Take me there!", @query_encode, class: "main-btn redirect-button-margin" %>
</div>
