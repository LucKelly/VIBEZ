<div class="session-container">
  <div class="session-container d-flex flex-column justify-content-center align-items-center gap-0.5 text-center">
    <h2 class="log-in header-font">Log in</h2>
    <br>
    <div class = "log-in-form">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="paragraph-font form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "transparent-input" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "transparent-input" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center gap-3">
        <button href="#" class="main-btn"> <%= f.button :submit, "Log in" %></button>
        </div>
        <br>
      <div class="form-actions d-flex justify-content-center gap-3">
   <%= link_to "Sign up", new_user_registration_path, class: "main-btn" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
