<div class="session-container">
  <div class="session-container d-flex flex-column justify-content-center align-items-center gap-2 text-center">
    <h2 class="header-log-in">Log in</h2>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%# <%= f.input :username,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "username" } %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "transparent-input" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "transparent-input" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center gap-3">
        <button href="#" class="main-btn"> <%= f.button :submit, "Log in" %></button>
        <button href="#" class="main-btn"> <%= link_to "Back", root_path %> </button>
      </div>
    <% end %>
    <%= link_to "Sign up", new_user_registration_path, class: "main-btn" %>
  </div>
</div>
