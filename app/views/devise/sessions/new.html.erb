<div class="d-flex text-center items-center justify-content-center">
  <div class="session-container">
    <h2>Log in</h2>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :username,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "username" } %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-center gap-3">
        <button href="#" class="btn btn-outline-primary"> <%= f.button :submit, "Log in" %>
        <button href="#" class="btn btn-outline-primary"> <%= link_to "Back", root_path %> </button>
      </div>
    <% end %>
  </div>
</div>
