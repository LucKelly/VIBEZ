<div class="profile-page-body">
  <div class="avatar-card">
    <%= cl_image_tag @user.photo.key, class: "avatar-img" %>
  </div>

  <h3 class="header-font"><%= @user.username %>'s vibez</h3>
  <div class="pb-4">
    <% if @user.subvibes.length > 0 %>
      <div class="grid-subvibes-style d-flex flex-wrap justify-content-flex-start">
        <% @user.subvibes.each do |subvibe| %>
          <div class="icon-card">
            <%= cl_image_tag subvibe.photo.key, class: "avatar-img"%>
            <%=subvibe.name%>
          </div>
        <% end %>
      </div>
    <% else %>
      <h2 class="paragraph-font">This viber doesn't have any favourite vibes yet!</h2>
    <% end %>
  </div>


  <h3 class="header-font"><%= @user.username %>'s favourite bars</h3>
  <div class="pb-4">
    <% if @user.bars.length > 0 %>
      <div class="grid-subvibes-style d-flex flex-wrap justify-content-flex-start">
        <% @user.bars.each do |bar| %>
          <div class="icon-card">
            <i class="fa-solid fa-martini-glass-citrus fa-3x"></i>
            <%= link_to bar.name, bar_path(bar.id), class: "link-text" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <h2 class="paragraph-font">This viber doesn't have favourites yet!</h2>
    <% end %>
  </div>
</div>
